<%- include('partials/header') -%>
<div class="m-5 flex">
  <img class="w-32" src="img/gamers-hub-logo.png" alt="" />
  <h1 class="text-white text-4xl">SEARCH RESULTS:</h1>
</div>

<div
  class="
    p-10
    grid grid-cols-1
    sm:grid-cols-1
    md:grid-cols-4
    lg:grid-cols-4
    xl:grid-cols-4
    gap-5
    content-center
  "
>
  <% for(let i = 0; i < games.results.length; i++) { %>
  <div
    class="
      bg-containcolor
      overflow-hidden
      shadow-lg
      rounded-3xl
      p-4
      transform
      transition
      duration-500
      hover:scale-105
    "
  >
    <h2 class="text-white"><%- games.results[i].name %></h2>
    <img
      class="object-cover h-48 w-full"
      src="<%- games.results[i].background_image %>"
      alt=""
    />
    <i class="fab fa-xbox text-white"></i>
    <span class="text-white"><%- games.results[i].platforms %></span>
  </div>
  <% } %>
</div>
<%- include('partials/footer') -%>
