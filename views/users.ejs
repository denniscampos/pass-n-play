<%- include('partials/header') -%> <%-
include('partials/dashboard-header.ejs')%>

<div class="container p-12 flex flex-col items-center content-center">
  <!-- follow and unfollow messages  -->
  <% if(messages.info) { %>
  <div
    class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3"
    role="alert"
  >
    <svg
      class="fill-current w-4 h-4 mr-2"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
    >
      <path
        d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"
      />
    </svg>
    <p><%= messages.info %></p>
  </div>
  <% } else if(messages.already) { %>
  <div role="alert">
    <div class="bg-tart_orange text-white font-bold rounded-t px-4 py-2">
      Alert
    </div>
    <div
      class="
        border border-t-0 border-red-400
        rounded-b
        bg-red-100
        px-4
        py-3
        text-red-700
      "
    >
      <p><%= messages.already %></p>
    </div>
  </div>
  <% } else if(messages.cannot) { %>
  <div role="alert">
    <div class="bg-tart_orange text-white font-bold rounded-t px-4 py-2">
      Alert
    </div>
    <div
      class="
        border border-t-0 border-red-400
        rounded-b
        bg-red-100
        px-4
        py-3
        text-red-700
      "
    >
      <p><%= messages.cannot %></p>
    </div>
  </div>
  <%} else if(messages.unfollow) { %>
  <div role="alert">
    <div class="bg-tart_orange text-white font-bold rounded-t px-4 py-2">
      Alert
    </div>
    <div
      class="
        border border-t-0 border-red-400
        rounded-b
        bg-red-100
        px-4
        py-3
        text-red-700
      "
    >
      <p><%= messages.unfollow %></p>
    </div>
  </div>
  <% } else if(messages.notFollowing) {%>
  <div role="alert">
    <div class="bg-tart_orange text-white font-bold rounded-t px-4 py-2">
      Alert
    </div>
    <div
      class="
        border border-t-0 border-red-400
        rounded-b
        bg-red-100
        px-4
        py-3
        text-red-700
      "
    >
      <p><%= messages.notFollowing %></p>
    </div>
  </div>
  <% } else if(messages.unfollowYourself) {%>
  <div role="alert">
    <div class="bg-tart_orange text-white font-bold rounded-t px-4 py-2">
      Alert
    </div>
    <div
      id="search"
      class="
        border border-t-0 border-red-400
        rounded-b
        bg-red-100
        px-4
        py-3
        text-red-700
      "
    >
      <p><%= messages.unfollowYourself %></p>
    </div>
  </div>
  <% } %>
  <!-- follow and unfollow messages  -->

  <% for( let i = 0; i < users.length; i++ ) { %>
  <div
    class="
      user-container
      flex
      my-5
      py-8
      justify-evenly
      md:w-100 md:flex-row
      items-center
      bg-gunmetal
      rounded-md
      w-80
      flex-col
    "
  >
    <img class="w-14 h-14" src="img/avatar.png" alt="" />
    <h3 id="users" class="text-white font-bold block">
      <%- users[i].userName.toUpperCase() %>
    </h3>
    <div class="followers-container flex items-center">
      <form
        class=""
        action="/followers/<%= users[i].id %>?_method=PUT"
        method="POST"
      >
        <button class="text-white btn btn-blue mx-5" type="submit">
          FOLLOW
        </button>
      </form>
      <form
        class=""
        action="/unfollows/<%= users[i].id %>?_method=PUT"
        method="POST"
      >
        <button class="btn btn-blue text-tart_orange" type="submit">
          UNFOLLOW
        </button>
      </form>
    </div>
  </div>
  <% } %>
</div>
<%- include('partials/footer') -%>
