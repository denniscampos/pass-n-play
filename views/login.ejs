<%- include("partials/header") -%>

<div class="container flex items-center justify-evenly">
  <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
  <div class="text-red-600"><%= el.msg %></div>
  <% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach(
  el => { %>
  <div class="text-red-600"><%= el.msg %></div>
  <% }) %> <% } %>
</div>

<div
  class="container flex flex-row flex-wrap my-36 items-center justify-evenly"
>
  <a href="/"> <img class="w-48" src="img/gamers-hub-logo.png" alt="" /></a>
  <form class="flex flex-col w-72" action="/login" method="POST">
    <input
      class="my-4 py-2 px-3 rounded-lg"
      type="text"
      name="email"
      placeholder="EMAIL"
    />
    <input
      class="py-2 rounded-lg px-3"
      type="password"
      name="password"
      placeholder="PASSWORD"
    />
    <button class="btn bg-fontcs hover:bg-gray-700 my-4" type="submit">
      Login
    </button>
    <a class="text-fontc text-center hover:text-gray-700" href="register"
      >Create Account</a
    >
  </form>
</div>

<%- include("partials/homeFooter") -%>
