<header
  x-data="{ mobileMenuOpen : false }"
  class="
    flex flex-wrap flex-row
    justify-between
    place-items-center
    md:items-center md:space-x-4
    bg-gunmetal
    px-6
    relative
  "
>
  <a href="/homepage" class="block">
    <img
      class="object-fill h-24"
      src="img/pass-n-play-logo.png"
      alt="Pass N' Play Logo"
      title="Pass N' Play Logo"
    />
  </a>
  <button
    @click="mobileMenuOpen = !mobileMenuOpen"
    class="inline-block md:hidden w-8 h-8 bg-gunmetal text-white p-1"
  >
    <svg
      fill="currentColor"
      viewBox="0 0 20 20"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        fill-rule="evenodd"
        d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
        clip-rule="evenodd"
      ></path>
    </svg>
  </button>
  <nav
    class="
      absolute
      md:relative
      top-16
      left-0
      md:top-0
      z-20
      md:flex
      flex-col
      md:flex-row md:space-x-6
      mt-2
      font-semibold
      w-full
      md:w-auto
      bg-gunmetal
      shadow-md
      rounded-lg
      md:rounded-none md:shadow-none md:bg-transparent
      p-6
      pt-0
      md:p-0
    "
    :class="{ 'flex' : mobileMenuOpen , 'hidden' : !mobileMenuOpen}"
    @click.away="mobileMenuOpen = false"
  >
    <a href="/discover" class="block py-1 text-white hover:underline"
      >Discover</a
    >
    <a href="/mylists" class="block py-1 text-white hover:underline"
      >My Lists</a
    >
    <a href="/profile" class="block py-1 text-white hover:underline">Profile</a>
    <a href="/users" class="block py-1 text-white hover:underline">Users</a>
    <a
      href="/logout"
      class="
        block
        py-1
        border
        rounded-md
        text-white
        hover:underline
        w-20
        text-center
      "
      >Logout</a
    >
  </nav>
</header>
