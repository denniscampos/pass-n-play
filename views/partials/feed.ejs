<div class="container">
  <h2 class="text-xl text-center text-fontcs font-bold">FEED</h2>
  <div class="container flex flex-col-reverse place-items-center">
    <% for(let i = 0; i < posts.length; i++) { %>

    <div
      class="p-3 m-3 w-3/5 bg-containcolor rounded-lg"
      data-id="<%= posts[i]._id %>"
    >
      <h2 class="text-fontcs font-bold">
        <%= String(posts[i].userName.toUpperCase()) %>
      </h2>
      <h4 class="text-white text-xl"><%= posts[i].postMessage %></h4>
      <span class="text-white"><%= posts[i].createdAt %></span>

      <% if(String(posts[i].userId) == String(user._id)) { %>

      <div class="flex justify-end">
        <a href=""><i class="fas fa-thumbs-up text-fontcs m-2"></i></a>
        <form
          action="homepage/deletePost/<%= posts[i]._id %>?_method=DELETE"
          method="POST"
          class="flex justify-end"
        >
          <button class="text-white" type="submit">
            <i class="fas fa-minus-circle text-red-600 m-2"></i>
          </button>
        </form>
      </div>
      <% }%>
    </div>
    <% } %>
  </div>
</div>
